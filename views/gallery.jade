  script
    :uglify-js
      function lazyload(src, title, id, link) {
        var img = new Image()
        img.onload = function() {
            document.getElementById(id).appendChild(img);
        }
        img.onclick = function() {
          window.location = link;
        }
        img.title = title;
        img.alt = title;
        img.src = src;
        img.className = 'd';
      }
      lazyload('a.gif', 'freelancer landing page', 'a', '/abhas_tandon');
      lazyload('s.gif', 'sell online', 's', '/super_mario');
      lazyload('h.gif', 'donations landing page', 'h', '/ideadeck_team');
